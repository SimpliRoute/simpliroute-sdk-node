{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "diagnostics": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "listEmittedFiles": false,
        "listFiles": false,
        "moduleResolution": "node",
        "alwaysStrict": true,
        "declaration": true,
        "outDir": "dist",
        "types": [
            "dotenv",
            "jest",
            "node"
        ]
    },
    "exclude": [
        "./node_modules",
        "./**/*.test.ts",
        "./**/*.spec.ts"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}